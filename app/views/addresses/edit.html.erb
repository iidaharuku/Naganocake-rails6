<div class="container">
  <div class="row">
    <div class="col">
      <h3>配送先編集</h3>
    </div>
  </div>
  <div >
    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>errors
      <% @genre.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <%= form_with model: @address,  url: address_path , method: :patch do |f| %>
    　<div class="row">
        <div class="col-2">
        　<p>郵便番号（ハイフンなし）</p>
      　</div>
      　<div class="col-2">
          <%= f.text_field :postal_code, placeholder: "0000000"  %>
        </div>
      </div>
      <div class="row">
        <div class="col-2">
        　<p>住所</p>
      　</div>
      　<div class="col-2">
          <%= f.text_field :place, placeholder: "東京都渋谷区代々木神園町0-0"  %>
        </div>
      </div>
      <div class="row">
        <div class="col-2">
        　<p>宛名</p>
      　</div>
      　<div class="col-2">
          <%= f.text_field :name, placeholder: "令和道子"  %>
        </div>
        <div class="col-2">
        <%= f.submit "変更内容を保存",class: "btn btn-success text-white" %>
      </div>
      </div>
    <% end %>
  </div>
</div>