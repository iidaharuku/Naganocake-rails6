<div class="container">
  <div class="row">
    <div class="col">
      <h3>配送先登録/一覧</h3>
    </div>
  </div>
  <div >
    <% if @address.errors.any? %>
      <%= @address.errors.count %>errors
      <% @address.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <%= form_with model: @address,  url: addresses_path , method: :post do |f| %>
    　<div class="row">
        <div class="col-2">
        　<p>郵便番号（ハイフンなし）</p>
      　</div>
      　<div class="col-2">
          <%= f.text_field :postal_code, placeholder: "0000000"  %>
        </div>
      </div>
      <div class="row">
        <div class="col-2">
        　<p>住所</p>
      　</div>
      　<div class="col-2">
          <%= f.text_field :place, placeholder: "東京都渋谷区代々木神園町0-0"  %>
        </div>
      </div>
      <div class="row">
        <div class="col-2">
        　<p>宛名</p>
      　</div>
      　<div class="col-2">
          <%= f.text_field :name, placeholder: "令和道子"  %>
        </div>
        <div class="col-2">
        <%= f.submit "新規登録",class: "btn btn-success text-white" %>
      </div>
      </div>
    <% end %>
  </div>
      <table class="table">
      　<thead>
        　<tr>
          　<th><P>郵便番号</P></th>
          　<th><P>住所</P></th>
          　<th><P>宛名</P></th>
          　<th></th>
        　</tr>
      　</thead>
      　<tbody>
        　<% @addresses.each do |address| %>
            <tr>
              <th><%= address.postal_code %></th>
              <th><%= address.place %></th>
              <th><%= address.name %></th>
              <th><%= link_to "編集する", edit_address_path(address), class: "btn btn-success text-white" %> <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger text-white" %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
</div>