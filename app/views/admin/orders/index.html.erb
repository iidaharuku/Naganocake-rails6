<div class="container">
  <div class="row">
    <div class="col">
      <h3>注文履歴一覧</h3>
    </div>
  </div>
  <div class="row">
    <table>
      <thead>
        <tr>
          <th><P>購入日時</P></th>
          <th><P>購入者</P></th>
          <th><P>注文個数</P></th>
          <th><P>注文ステータス</P></th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <th><%= link_to order.created_at, admin_order_path(order) %></th>
            <th><%= order.address_name %></th>
            <th>
              <%= order.order_detail.all.sum(:amount) %>
            </th>
            <th>
　　　　　　　<%= order.status_i18n %>
            </th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col">
      <p>1 2 3 Next＞ Last >></p>
    </div>
  </div>
</div>