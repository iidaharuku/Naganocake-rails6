<div class="container">
  <h2>管理者ログイン</h2><br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-3">
      <p>メールアドレス</p>
　  </div>
　  <div class="col-3">
　    <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email" %>
　  </div>
  </div>
  <div class="row">
    <div class="col-3">
      <p>パスワード</p>
　  </div>
　  <div class="col-3">
　    <%= f.password_field :password, autocomplete: "current-password" %>
　  </div>
  </div>
  <div class="row">
    <div class="col-3">
　  </div>
　  <div class="col-3">
　    <%= f.submit "ログイン" , class: "btn btn-primary text-white"%>
　  </div>
  </div>
  <% end %>
</div>