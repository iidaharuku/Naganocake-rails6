<div class="container">
  <div class="row">
    <div class="col">
      <h3>商品新規登録</h3>
    </div>
  </div>
  <div >
    <% if @item.errors.any? %>
      <%= @item.errors.count %>errors
      <% @item.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <%= form_with model: @item,  url: admin_items_path ,class: "container", method: :post do |f| %>
      <div class="row">
        <div class="col-2">
          <p>商品画像</p>
        </div>
      　<div class="col-2">
      　  <%= f.file_field :image, accept: "image/*" %>
      　</div>
      </div>
      <div class="row">
        <div class="col-2">
          <p>商品名</p>
        </div>
      　<div class="col-2">
          <%= f.text_field :name, autofocus: true, autocomplete: "name"%>
      　</div>
      </div>
      <div class="row">
        <div class="col-2">
          <p>商品説明</p>
        </div>
      　<div class="col-2">
          <%= f.text_area :explanation, autofocus: true, autocomplete: "name"%>
      　</div>
      </div>
      <div class="row">
        <div class="col-2">
          <p>ジャンル</p>
        </div>
      　<div class="col-2">
          <%= f.text_field :genre_id, autofocus: true, autocomplete: "name"%>
      　</div>
      </div>
      <div class="row">
        <div class="col-2">
          <p>税抜価格</p>
        </div>
      　<div class="col-2">
          <%= f.text_field :tax_free_cost, autofocus: true, autocomplete: "name"%>
      　</div>
      </div>
      <div class="row">
        <div class="col-2">
          <p>販売ステータス</p>
        </div>
      　<div class="col-2">
          
      　</div>
      </div>
      
      
      <div class="row">
        <%= f.submit "変更を保存",class: "btn btn-success text-white" %>
      </div>
    <% end %>
  </div>
</div>