<div class="container">
  <div class="row">
    <div class="col">
      <h3>ジャンル編集</h3>
    </div>
  </div>
  <div >
    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>errors
      <% @genre.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <%= form_with model: @genre,  url: admin_genre_path ,class: "row", method: :patch do |f| %>
      <div class="col-2">
        <p>ジャンル名</p>
      </div>
      <div class="col-2">
          <%= f.text_field :name, autofocus: true, autocomplete: "name"%>
      </div>
      <div class="col-4">
        <%= f.submit "変更を保存",class: "btn btn-success text-white" %>
      </div>
    <% end %>
  </div>
</div>